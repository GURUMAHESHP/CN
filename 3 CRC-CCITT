import java.util.*;

public class Lab3Crc {

    // CRC division using XOR
    public static String divide(char[] dividend, char[] divisor) {

        int n = dividend.length;
        int m = divisor.length;

        // perform division only till n-m
        for (int i = 0; i <= n - m; i++) {

            if (dividend[i] == '1') {

                for (int j = 0; j < m; j++) {

                    // XOR operation
                    if (dividend[i + j] == divisor[j])
                        dividend[i + j] = '0';
                    else
                        dividend[i + j] = '1';
                }
            }
        }

        // return remainder
        return new String(dividend).substring(n - m + 1);
    }

    // Encode data
    public static String encode(String data, String key) {

        String appended = data + "0".repeat(key.length() - 1);

        String remainder = divide(appended.toCharArray(), key.toCharArray());

        return data + remainder;
    }

    // Check error
    public static boolean hasError(String received, String key) {

        String remainder = divide(received.toCharArray(), key.toCharArray());

        return remainder.contains("1"); // true means error
    }

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.print("Enter binary key: ");
        String key = sc.next();

        System.out.print("Enter binary data: ");
        String data = sc.next();

        // Encoding
        String encoded = encode(data, key);
        System.out.println("Encoded data: " + encoded);

        // Decoding
        System.out.print("Enter received data: ");
        String received = sc.next();

        if (hasError(received, key))
            System.out.println("Error in the data");
        else
            System.out.println("Data is error free");

        sc.close();
    }
}
