import java.util.*;

class Lab2Sort {

    // Frame class
    static class Frame {
        int fnum;
        String content;

        Frame(int fnum, String content) {
            this.fnum = fnum;
            this.content = content;
        }
    }

    // Bubble Sort
    static void bubbleSort(Frame[] F) {
        for (int i = 0; i < F.length - 1; i++) {
            for (int j = 0; j < F.length - i - 1; j++) {
                if (F[j].fnum > F[j + 1].fnum) {

                    // swap whole objects (easy way)
                    Frame temp = F[j];
                    F[j] = F[j + 1];
                    F[j + 1] = temp;
                }
            }
        }
    }

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.print("Enter number of frames: ");
        int n = sc.nextInt();

        Frame[] frames = new Frame[n];

        // Input
        for (int i = 0; i < n; i++) {
            System.out.print("Frame number: ");
            int num = sc.nextInt();

            System.out.print("Frame content: ");
            String data = sc.next();

            frames[i] = new Frame(num, data);
        }

        // Shuffle (to show sorting clearly)
        Collections.shuffle(Arrays.asList(frames));

        System.out.println("\nBefore Sorting:");
        for (Frame f : frames)
            System.out.print(f.content + " ");

        // Call Bubble Sort
        bubbleSort(frames);

        System.out.println("\nAfter Sorting:");
        for (Frame f : frames)
            System.out.print(f.content + " ");

        sc.close();
    }
}
